{
  "apps": [
    {
      "name": "in-dom",
      "script": "node",
      "args": "dist/echo-mcp-server.js",
      "cwd": "./",
      "instances": 1,
      "exec_mode": "fork",
      "env": {
        "NODE_ENV": "production",
        "PORT": 3100
      },
      "autorestart": false,
      "watch": false,
      "max_memory_restart": "1G",
      "error_file": "./logs/pm2-error.log",
      "out_file": "./logs/pm2-out.log",
      "log_file": "./logs/pm2-combined.log",
      "time": true
    }
  ]
}
